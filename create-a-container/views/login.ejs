<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MIE Container Creation Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/style.css" rel="stylesheet">
</head>
<body class="page-center">
    <div class="login-container">
        <img src="logo.png" alt="Company Logo" class="logo">
        <h2>Container Creation Login</h2>
        
        <% if (successMessages && successMessages.length > 0) { %>
            <% successMessages.forEach(function(message) { %>
                <div style="color: green; margin-bottom: 1rem; padding: 0.5rem; border: 1px solid green; background-color: #d4edda; border-radius: 4px;">
                    <%= message %>
                </div>
            <% }) %>
        <% } %>
        
        <% if (errorMessages && errorMessages.length > 0) { %>
            <% errorMessages.forEach(function(message) { %>
                <div style="color: red; margin-bottom: 1rem; padding: 0.5rem; border: 1px solid red; background-color: #f8d7da; border-radius: 4px;">
                    <%- message %>
                </div>
            <% }) %>
        <% } %>
        
        <form method="POST" action="/login" id="loginForm">
            <input type="hidden" name="redirect" value="<%= redirect %>">
            
            <label for="username">Username</label>
            <input type="text" name="username" id="username" required>

            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>

            <input type="submit" value="Login" id="loginButton">
        </form>
        
        <!-- Loading banner for 2FA waiting -->
        <div id="loadingBanner" style="display: none; margin-top: 1rem; padding: 0.75rem; border: 1px solid #0056b3; background-color: #cce5ff; border-radius: 4px; color: #004085;">
            <strong>‚è≥ Waiting for authentication...</strong>
            <p style="margin: 0.5rem 0 0 0; font-size: 0.9em;">Please check your device and respond to the push notification.</p>
        </div>
        
        <hr>
        <div class="signup-section">
            <a href="/reset-password">Forgot your password?</a>
        </div>
        <hr>
        <div class="signup-section">
            <strong>Don't have an account?</strong>
            <a href="/register">Register</a>
        </div>
        <div class="footer">
            &copy; 2025 Medical Informatics Engineering
        </div>
    </div>
    
    <script>
    // Wait for DOM to be fully loaded before attaching event listeners
    document.addEventListener('DOMContentLoaded', function() {
        // Show loading banner when form is submitted
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            // Show loading banner
            document.getElementById('loadingBanner').style.display = 'block';
            // Disable submit button to prevent double submission
            document.getElementById('loginButton').disabled = true;
            document.getElementById('loginButton').value = 'Authenticating...';
        });
    });
    </script>
</body>
</html>