<%- include('../layouts/header', { 
  title: 'Sites - MIE',
  breadcrumbs: [
    { label: 'Sites', url: '/sites' }
  ],
  req
}) %>
<div class="card shadow-sm">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="card-title mb-0">Sites</h4>
      <a class="btn btn-primary" href="/sites/new" role="button" aria-label="Create new site">New Site</a>
    </div>

    <div class="table-responsive">
      <table class="table table-hover table-bordered align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Internal Domain</th>
            <th>Subnet</th>
            <th>Gateway</th>
            <th>Node Count</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (rows.length === 0) { %>
            <tr>
              <td colspan="7" class="text-center text-muted">No sites found</td>
            </tr>
          <% } else { %>
            <% rows.forEach(row => { %>
              <tr>
                <td><%= row.id %></td>
                <td><%= row.name %></td>
                <td><%= row.internalDomain || '-' %></td>
                <td><%= row.subnet || '-' %></td>
                <td><%= row.gateway || '-' %></td>
                <td><%= row.nodeCount %></td>
                <td>
                  <a href="/sites/<%= row.id %>/edit" class="btn btn-sm btn-outline-primary" aria-label="Edit site <%= row.name %>">Edit</a>
                  <form method="POST" action="/sites/<%= row.id %>" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete site <%= row.name %>?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button
                      type="submit"
                      class="btn btn-danger btn-sm"
                      <% if (row.nodeCount > 0) { %>
                        disabled
                        aria-disabled="true"
                        aria-label="Cannot delete site with associated nodes"
                      <% } else { %>
                        aria-label="Delete site <%= row.name %>"
                      <% } %>
                    >
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../layouts/footer') %>
