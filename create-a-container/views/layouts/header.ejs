<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= typeof title !== 'undefined' ? title : 'MIE Container Creation' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <% if (typeof showNav === 'undefined' || showNav) { %>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <ol class="breadcrumb mb-0">
                <% if (typeof breadcrumbs !== 'undefined') { %>
                    <% breadcrumbs.forEach((crumb, index) => { %>
                        <li class="breadcrumb-item <%= index === breadcrumbs.length - 1 ? 'active' : '' %>" <%= index === breadcrumbs.length - 1 ? 'aria-current="page"' : '' %>>
                            <a href="<%= crumb.url %>"><%= crumb.label %></a>
                        </li>
                    <% }) %>
                <% } %>
            </ol>
            <form method="POST" action="/logout">
                <button type="submit" class="btn btn-danger logout-button">Logout</button>
            </form>
        </div>
    </nav>
    <% } %>

    <main class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12 <%= typeof colWidth !== 'undefined' ? colWidth : 'col-lg-10' %>">
                <!-- Flash Messages -->
                <% if (typeof successMessages !== 'undefined' && successMessages && successMessages.length > 0) { %>
                    <% successMessages.forEach(msg => { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% }) %>
                <% } %>
                
                <% if (typeof errorMessages !== 'undefined' && errorMessages && errorMessages.length > 0) { %>
                    <% errorMessages.forEach(msg => { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% }) %>
                <% } %>
