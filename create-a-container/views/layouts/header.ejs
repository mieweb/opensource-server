<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'MIE Container Creation' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-auto d-md-block sidebar">
        <div class="sidebar-logo">
          <a href="/">
            <img src="/logo.png" alt="MIE Logo" class="logo">
          </a>
        </div>
        <div class="position-sticky">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/containers">
                Containers
              </a>
            </li>
            <% if (req.session && req.session.isAdmin) { %>
              <li class="nav-item">
                <a class="nav-link" href="/nodes">
                  Nodes
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users">
                  Users
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/groups">
                  Groups
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      </nav>

      <!-- Main content area with navbar -->
      <div class="col p-0">
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <ol class="breadcrumb mb-0">
              <% if (typeof breadcrumbs !== 'undefined') { %>
                <% breadcrumbs.forEach((crumb, index) => { %>
                  <li class="breadcrumb-item <%= index === breadcrumbs.length - 1 ? 'active' : '' %>" <%= index === breadcrumbs.length - 1 ? 'aria-current="page"' : '' %>>
                    <a href="<%= crumb.url %>"><%= crumb.label %></a>
                  </li>
                <% }) %>
              <% } %>
            </ol>
            <form method="POST" action="/logout">
              <button type="submit" class="btn btn-danger logout-button">Logout</button>
            </form>
          </div>
        </nav>

        <!-- Main content -->
        <main class="px-md-4 mt-4">
          <div class="row justify-content-center">
            <div class="col-12 <%= typeof colWidth !== 'undefined' ? colWidth : 'col-lg-10' %>">
              <!-- Flash Messages -->
              <% 
                const successMessages = req.flash ? req.flash('success') : [];
                const errorMessages = req.flash ? req.flash('error') : [];
              %>
              <% if (successMessages && successMessages.length > 0) { %>
                <% successMessages.forEach(msg => { %>
                  <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }) %>
              <% } %>
              
              <% if (errorMessages && errorMessages.length > 0) { %>
                <% errorMessages.forEach(msg => { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% }) %>
            <% } %>
