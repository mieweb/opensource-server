<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'MIE Container Creation' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <!-- Fixed top navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/logo.png" alt="MIE Logo" style="max-height: 40px;">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="d-flex align-items-center flex-grow-1">
        <ol class="breadcrumb mb-0 me-auto">
          <% if (typeof breadcrumbs !== 'undefined') { %>
            <% breadcrumbs.forEach((crumb, index) => { %>
              <li class="breadcrumb-item <%= index === breadcrumbs.length - 1 ? 'active' : '' %>" <%= index === breadcrumbs.length - 1 ? 'aria-current="page"' : '' %>>
                <a href="<%= crumb.url %>" class="text-white"><%= crumb.label %></a>
              </li>
            <% }) %>
          <% } %>
        </ol>
        <form method="POST" action="/logout">
          <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="container-fluid" style="margin-top: 56px;">
    <div class="row">
      <!-- Collapsible Sidebar -->
      <nav id="sidebarMenu" class="col-auto d-md-block bg-dark sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <% 
              const path = req.originalUrl || ''; 
              const hasCurrentSite = typeof currentSite !== 'undefined' && currentSite; 
              const containersActive = hasCurrentSite && path.includes(`/sites/${currentSite}/containers`); 
              const nodesActive = hasCurrentSite && path.includes(`/sites/${currentSite}/nodes`); 
              const externalDomainsActive = path.startsWith('/external-domains'); 
            %>
            <li class="nav-item site-group" aria-label="Site navigation">
              <div class="d-flex align-items-center nav-link site-selector-wrapper">
                <a href="/sites" class="sites-root-link" style="flex-shrink:0; color: inherit; text-decoration: none;" aria-label="View all sites">Sites</a>
                <label for="site-selector" class="visually-hidden">Select current site</label>
                <select id="site-selector" class="form-select form-select-sm" style="flex-grow:1; margin-left:0.5rem;" aria-label="Site selector">
                  <option value="">Select...</option>
                  <% if (typeof sites !== 'undefined' && sites) { %>
                    <% sites.forEach(site => { %>
                      <option value="<%= site.id %>" <%= currentSite === site.id ? 'selected' : '' %>><%= site.name %></option>
                    <% }) %>
                  <% } %>
                </select>
              </div>
              <% if (hasCurrentSite) { %>
                <ul class="site-children" aria-label="Resources for selected site">
                  <li>
                    <a class="nav-link child-link <%= containersActive ? 'active' : '' %>" href="/sites/<%= currentSite %>/containers" aria-current="<%= containersActive ? 'page' : '' %>">Containers</a>
                  </li>
                  <% if (req.session && req.session.isAdmin) { %>
                    <li>
                      <a class="nav-link child-link <%= nodesActive ? 'active' : '' %>" href="/sites/<%= currentSite %>/nodes" aria-current="<%= nodesActive ? 'page' : '' %>">Nodes</a>
                    </li>
                  <% } %>
                </ul>
              <% } %>
            </li>
            <% if (req.session && req.session.isAdmin) { %>
              <li class="nav-item">
                <a class="nav-link <%= externalDomainsActive ? 'active' : '' %>" href="/external-domains" aria-current="<%= externalDomainsActive ? 'page' : '' %>">
                  External Domains
                </a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link <%= path.startsWith('/apikeys') ? 'active' : '' %>" href="/apikeys" aria-current="<%= path.startsWith('/apikeys') ? 'page' : '' %>">
                API Keys
              </a>
            </li>
            <% if (req.session && req.session.isAdmin) { %>
              <li class="nav-item">
                <a class="nav-link" href="/users">
                  Users
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/groups">
                  Groups
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/settings">
                  Settings
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col px-md-4">
          <div class="row justify-content-center">
            <div class="col-12 <%= typeof colWidth !== 'undefined' ? colWidth : 'col-lg-10' %>">
              <!-- Flash Messages -->
              <% 
                const successMessages = req.flash ? req.flash('success') : [];
                const errorMessages = req.flash ? req.flash('error') : [];
              %>
              <% if (successMessages && successMessages.length > 0) { %>
                <% successMessages.forEach(msg => { %>
                  <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% }) %>
              <% } %>
              
              <% if (errorMessages && errorMessages.length > 0) { %>
                <% errorMessages.forEach(msg => { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% }) %>
            <% } %>

<script>
  // Site selector navigation
  document.addEventListener('DOMContentLoaded', () => {
    const siteSelector = document.getElementById('site-selector');
    if (siteSelector) {
      siteSelector.addEventListener('change', function() {
        const siteId = this.value;
        if (siteId && !isNaN(parseInt(siteId, 10))) {
          const encodedSiteId = encodeURIComponent(siteId);
          window.location.href = `/sites/${encodedSiteId}/containers`;
        }
      });
    }
  });
</script>
